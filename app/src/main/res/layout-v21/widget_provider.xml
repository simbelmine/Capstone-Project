<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:id="@+id/widget_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_toolbar_height"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/widget_home_icon"
            android:layout_width="@dimen/widget_toolbar_home_icon_size"
            android:layout_height="@dimen/widget_toolbar_home_icon_size"
            android:layout_marginLeft="@dimen/activity_horizontal_spacing"
            android:layout_marginStart="@dimen/activity_horizontal_spacing"
            android:src="@mipmap/fish_icon_negative"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_icon"/>
        <ImageView
            android:id="@+id/widget_refresh_icon"
            android:layout_width="@dimen/widget_toolbar_icon_size"
            android:layout_height="@dimen/widget_toolbar_icon_size"
            android:src="@mipmap/sync"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:layout_marginEnd="@dimen/activity_horizontal_spacing"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/refresh"/>
        <ImageView
            android:id="@+id/widget_clear_done_icon"
            android:layout_width="@dimen/widget_toolbar_icon_size"
            android:layout_height="@dimen/widget_toolbar_icon_size"
            android:src="@mipmap/clear_all_white"
            android:layout_marginRight="@dimen/activity_horizontal_spacing"
            android:layout_marginEnd="@dimen/activity_horizontal_spacing"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/widget_refresh_icon"
            android:layout_toStartOf="@id/widget_refresh_icon"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        tools:listitem="@layout/widget_list_item"
        android:layout_below="@+id/widget_toolbar"/>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/widget_empty_view"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:visibility="visible" />

</RelativeLayout>