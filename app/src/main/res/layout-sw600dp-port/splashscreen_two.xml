<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/splash_screen_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splashscreen_bg"
        android:paddingBottom="@dimen/activity_vertical_spacing"
        android:paddingTop="@dimen/splash_title_margin_top"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/splash_2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_title_text_size"
            android:text="@string/splash_2_title"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_double_spacing"
            android:paddingRight="@dimen/activity_double_spacing"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/splash_2_title"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/red_square"
                    android:layout_width="@dimen/splash_2_square_size"
                    android:layout_height="@dimen/splash_2_square_size"
                    android:background="@drawable/rounded_corners_red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/red_square"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_spacing"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:textSize="@dimen/splash_content_text_size_big"
                    android:text="@string/splash_2_red_title"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/splascreen_text1"
                android:textSize="@dimen/splash_content_text_size_small"
                android:text="@string/splash_2_red_content"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                >
                <ImageView
                    android:id="@+id/green_square"
                    android:layout_width="@dimen/splash_2_square_size"
                    android:layout_height="@dimen/splash_2_square_size"
                    android:background="@drawable/rounded_corners_green"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/green_square"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_spacing"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:textSize="@dimen/splash_content_text_size_big"
                    android:text="@string/splash_2_green_title"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/splascreen_text1"
                android:textSize="@dimen/splash_content_text_size_small"
                android:text="@string/splash_2_green_content"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                >
                <ImageView
                    android:id="@+id/yellow_square"
                    android:layout_width="@dimen/splash_2_square_size"
                    android:layout_height="@dimen/splash_2_square_size"
                    android:background="@drawable/rounded_corners_yellow"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/yellow_square"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_spacing"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:textSize="@dimen/splash_content_text_size_big"
                    android:text="@string/splash_2_yellow_title"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/splascreen_text1"
                android:textSize="@dimen/splash_content_text_size_small"
                android:text="@string/splash_2_yellow_content"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                >
                <ImageView
                    android:id="@+id/gray_square"
                    android:layout_width="@dimen/splash_2_square_size"
                    android:layout_height="@dimen/splash_2_square_size"
                    android:background="@drawable/rounded_corners_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/gray_square"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_spacing"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white"
                    android:textSize="@dimen/splash_content_text_size_big"
                    android:text="@string/splash_2_gray_title"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_spacing"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/splascreen_text1"
                android:textSize="@dimen/splash_content_text_size_small"
                android:text="@string/splash_2_gray_content"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
